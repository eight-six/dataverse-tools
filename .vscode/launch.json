    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug Module",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/src/modules/eight-six.dataverse-tools/eight-six.dataverse-tools.psd1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Pester Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "Invoke-Pester",
            "createTemporaryIntegratedConsole": true,
            "attachDotnetDebugger": true
        }
    ]
}